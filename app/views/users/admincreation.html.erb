<% provide(:title, 'Modifying Roles') %>
<h1>Modifying Roles</h1>
<h2>Creating New Admins</h2>
<%= form_for (@user),:url=> url_for(:controller => 'users',:action =>'adminupdate') do |f| %>
    <div class="field">
      <label>Enter Username:</label>
      <%= f.text_field :username %>
    </div>
    <br>
    <div class="field">
      <%= f.label :role %><br>
      <%= f.select :role, options_for_select([["Select One", ""], "admin", "user"]) %>
    </div>
    <div class="actions">
      <br>
      <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
    </div>
<% end %>