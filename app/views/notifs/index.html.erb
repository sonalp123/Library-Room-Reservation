<p id="notice"><%= notice %></p>
<% provide(:title, 'My Inbox') %>
<h1>Inbox</h1>

<table border="2">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Message</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notif.each do |notif| %>
      <tr>
        <% if notif.username == session[:user_name] %>
            <td><%= notif.sender %></td>
            <td><%= notif.message %></td>
            <td><%= notif.date %></td>
          </tr>
        <% end %>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Send a new message', new_notif_path %>
